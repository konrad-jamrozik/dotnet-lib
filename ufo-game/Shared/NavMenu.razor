@inject Model.Game Game;

<div class="top-row ps-2 navbar fixed-top bg-body-tertiary" data-bs-theme="dark">
    <div class="container-fluid">
        <div class="row">
            <div class="col hstack gap-0 px-1" style="width: 100px">
                <span class="oi oi-badge" aria-hidden="true"></span>
                @Game.PlayerScore.Value
            </div>
            <div class="col hstack gap-0 px-1" style="width: 100px">
                <span class="oi oi-dollar" aria-hidden="true"></span>
                @Game.Money.CurrentMoney
            </div>
            <div class="col hstack gap-0 px-1" style="width: 60px">
                <span class="oi oi-people" aria-hidden="true"></span>
                @Game.Staff.CurrentSoldiers
            </div>
            @* <div class="col hstack gap-0 px-1" style="width: 40px"> *@
            @*     <span class="oi oi-calendar" aria-hidden="true"></span> *@
            @*     @Game.Timeline.CurrentTime *@
            @* </div> *@
            <div class="col hstack gap-0 px-1" style="width: 40px">
                <span class="oi oi-timer" aria-hidden="true"></span>
                @Game.PendingMission.CountDown
            </div>
        </div>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>        
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="hq" Match="NavLinkMatch.All">
                <span class="oi oi-globe" aria-hidden="true"></span>HQ
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="mission">
                <span class="oi oi-random" aria-hidden="true"/>Mission
            </NavLink>
        </div>
        @* <div class="nav-item px-3"> *@
