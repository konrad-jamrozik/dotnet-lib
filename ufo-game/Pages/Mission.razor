@* kja WIP: Mission.razor *@
<PageTitle>Mission</PageTitle>

<h1>Mission</h1>

<div class="accordion" id="accordionExample">
    @{
        var indexes2 = Enumerable.Range(0, 3).Count();
        for (int i = 0; i < indexes2; i++)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading_@i">
                    @* kja use SASS variables (or maybe just CSS variables is enough?) to replace py-1, px-2 *@
                    @* --bs-accordion-btn-padding-y https://getbootstrap.com/docs/5.3/components/accordion/#sass-variables
                    @* https://developer.mozilla.org/en-US/docs/Web/CSS/Using_CSS_custom_properties*@
                    <button class="accordion-button collapsed py-1 px-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" style="text-align: justify">
                        @i Agent 0123456789 0123456789 suffered 123 damage from enemy 01234567890123456789. Agent is incapacitated.
                    </button>
                </h2>
                <div id="collapse_@i" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        Details of item @i Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                        labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
                    </div>
                </div>
            </div>
        }
    }
</div>

