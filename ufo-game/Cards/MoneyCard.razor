@using UfoGame.Cards.Components
@inject Model.Game Game;
@inject ViewModel.HireAgentsPlayerAction HireAgents;


<Card Title="Money">
    <CardDataRow Label="Balance" Value="Game.Money.CurrentMoney" />
    <CardDataRow Label="Income per turn" 
                 Value="Game.Money.MoneyPerTurnAmount" 
                 ValueCssClass="@(Game.Money.MoneyPerTurnAmount >= 0 ? "text-success" : "text-danger")" />
    <CardDataRow Label="Passive income" Value="Game.Money.PassiveIncome" ValueCssClass="text-success" />
    <CardDataRow Label="Expenses" Value="Game.Money.Expenses" ValueCssClass="text-danger" />
</Card>