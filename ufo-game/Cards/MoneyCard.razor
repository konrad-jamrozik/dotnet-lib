@using UfoGame.Cards.Components
@inject Model.Game Game;
@inject ViewModel.HireSoldiersPlayerAction HireSoldiers;


<Card Title="Money">
    <CardDataRow Text="Balance" Value="Game.Money.CurrentMoney" ValueCssClass="TextReader-success"/>
    <CardDataRow Text="Income per turn" 
                 Value="Game.Money.MoneyPerTurnAmount" 
                 ValueCssClass="@(Game.Money.MoneyPerTurnAmount >= 0 ? "text-success" : "text-danger")" />
    <CardDataRow Text="Passive income" Value="Game.Money.PassiveIncome" ValueCssClass="text-success" />
    <CardDataRow Text="Expenses" Value="Game.Money.Expenses" ValueCssClass="text-danger" />
</Card>