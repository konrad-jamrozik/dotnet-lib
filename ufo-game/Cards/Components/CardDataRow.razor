@using UfoGame.Model;

<div class="row">
    <div class="col-7 text-start">@Text</div>
    <div class="col-1 col-2">@DisplayedValue()</div>
</div>

@code
{
    [Parameter]
    public string Text { get; set; } = "";

    [Parameter]
    public int Value { get; set; } = 0;

    [Parameter]
    public bool Enabled { get; set; } = true;

    private string DisplayedValue() => Enabled ? Value.ToString() : "-";
}