@using UfoGame.Cards.Components
@inject Model.Game Game;
@inject ViewModel.HireSoldiersPlayerAction HireSoldiers;

<Card Title="Assets">
    <CardDataRow Text="Money" Value="Game.Money.CurrentMoney"/>
    <CardDataRow Text="Soldiers" Value="Game.Staff.CurrentSoldiers"/>
    <CardDataRow Text="Soldier effectiveness" Value="Game.Staff.SoldierEffectiveness" />
    <CardDataRow Text="Soldier survivability" Value="Game.Staff.SoldierSurvivability" />
    <CardButtonWithRangeInput PlayerAction = "HireSoldiers">
        Hire @Game.Staff.SoldiersToHire soldiers for $@Game.Staff.SoldiersToHireCost
    </CardButtonWithRangeInput>
</Card>