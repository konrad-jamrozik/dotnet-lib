@using UfoGame.Cards.Components
@using UfoGame.Model
@using UfoGame.Model.Data
@inject Game Game

<div class="list-group-item list-group-item-action" aria-current="true">
    <div class="container-fluid">
        <div class="row">
            <div class="col col-auto me-auto">
                <div class="row">
                    <h5 class="ps-0 @NameTextColor">@Agent.Nickname</h5>
                </div>
                <div class="row row-cols-auto">
                    <div class="col ps-0">Exp: @Agent.ExperienceBonus(Game.Timeline.CurrentTime)</div>
                    <div class="col">Time to recover: @Agent.TimeToRecover(Game.Staff.Data.AgentRecoverySpeed)</div>
                </div>
            </div>
            <div class="col col-auto align-self-center d-flex justify-content-center">
                <button class="btn btn-primary" type="button" 
                        data-bs-toggle="collapse" data-bs-target="#agentInfo_@Index" 
                        aria-expanded="false" aria-controls="agentInfo_@Index">
                    i
                </button>
            </div>
            <div class="col col-auto px-0">
                <div class="d-flex flex-column align-items-center">
                    <div class="form-check form-switch ps-0">
                        <input class="form-check-input ms-0" type="checkbox" role="switch" 
                               id="flip_switch_@Index"
                               disabled="@(!Agent.CanSendOnMission)"
                               @onchange="@(eventArgs => OnChangeAgentMissionAssignment(eventArgs.Value!))" 
                               checked="@Agent.AssignedToMission"/>
                    </div>
                    <label class="form-check-label" for="flip_switch_@Index">Send</label>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="collapse" id="agentInfo_@Index">
    <Card Title="Agent info">
        <CardDataRow Label="Id" Value="@Agent.Id" />
        <CardDataRow Label="Salary" Value="@Agent.Salary"/>
        <CardDataRow Label="Remaining recovery" Value="@Agent.Recovery" />
        <CardDataRow Label="Training time" Value="@Agent.TrainingTime(Game.Timeline.CurrentTime)"/>
        <CardDataRow Label="Time spent recovering" Value="@Agent.TimeSpentRecovering" />
        <CardDataRow Label="Time hired" Value="@Agent.TimeHired"/>
        <CardDataRow Label="Time employed" Value="@Agent.TimeEmployed(Game.Timeline.CurrentTime)"/>
        <CardDataRow Label="Total missions" Value="@Agent.TotalMissions"/>
        <CardDataRow Label="Successful missions" Value="@Agent.SuccessfulMissions"/>
        <CardDataRow Label="Failed missions" Value="@Agent.FailedMissions"/>
        <CardDataRow Label="Time spent recovering" Value="@Agent.TimeSpentRecovering"/>
    </Card>
    @* kja button to fire agent, with modal *@
</div>

@code 
{
    [Parameter, EditorRequired]
    public int Index { get; set; }

    #nullable disable
    [Parameter, EditorRequired]
    public Agent Agent { get; set; }
    #nullable enable

    private void OnChangeAgentMissionAssignment(object eventArgsValue)
    {
        bool isChecked = (bool)eventArgsValue;
        if (isChecked)
            Agent.AssignToMission();
        else
            Agent.UnassignFromMission();
        Game.StateRefresh.Trigger();
    }

    private string NameTextColor
        => Agent.IsRecovering ? "text-danger" : "";
}
